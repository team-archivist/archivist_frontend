{
  "extends": "@archivist/config/react.tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "webworker"
    ],
    "paths": {
      "@components*": [
        "src/components*"
      ],
      "@lib*": [
        "src/lib*"
      ],
      "@assets*": [
        "src/assets*"
      ],
      "@archivist/ui": [
        "packages/ui/src"
      ],
      "@constants*" : [
        "src/constants*"
      ],
      "@hooks*" : [
        "src/hooks*"
      ],
      "@store*" : [
        "src/store*"
      ],
      "@model*" : [
        "src/model*"
      ]
    },
    "types": [
      "@emotion/react/types/css-prop"
    ],
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
